@import "@redsift/ui-rs-core/dist/css/ui-rs-core.min.css"
@import "@redsift/ui-rs-hero/dist/css/ui-rs-hero.min.css"

body, html {
  height: 100%;
}

.-bg-hero {
  background-image: url('../../assets/panorama_day.jpg');
  background-color: rgb(42, 24, 22);
  background-image: -webkit-image-set(
    url('../../assets/panorama_day.jpg') 1x,
    url('../../assets/panorama_day_2x.jpg') 2x
  );
}

.hero-sticky-header--active{
  box-shadow: 0px 0px 2px 2px rgba(0, 0, 0, 0.15)
  background-image: url('../../assets/panorama_day.jpg')
  background-image: -webkit-image-set(
    url('../../assets/panorama_day.jpg') 1x,
    url('../../assets/panorama_day_2x.jpg') 2x
  )
}

.ocado-container {
  min-width: 200px;
  min-height: 0px!important;
  margin-bottom: 1em;
}

.ocado-container:last-child {
  margin-bottom: 0;
}

.ocado-layout-center {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.sectionTitle {
  margin-left: 10px;
  margin-top: 10px;
  display: inline-block;
  color: #ab6438;
}

.sectionSubtitle {
  display: inline-block;
  opacity: 0.5;
  font-size: 14px;
}

.recipe__suggestion {
  font-size: 24px!important;
  padding-left: 10px;
  padding-right: 10px;
}

.hero a {
  font-size: 24px;
}

a, a:visited {
  color: #fff!important;
}

.cards {
  display: flex;
  flex-wrap: wrap;
  align-self: stretch;
  margin-bottom: 2em;
  justify-content: space-around;
}

.card {
  border: 1px solid black;
  padding: 1em;
  padding-top: 0.5em;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.card--family{
  margin-bottom: 0.5em;
  padding: 0.5em 0;
  border-bottom: 1px solid black;
}
{
  "name": "sift-ocado",
  "display-name": "Ocado Expenses",
  "description": "Ocado receipts aggregation.",
  "author": "Christian Miccio",
  "version": "1.0.0",
  "icon": "https://static.redsift.io/assets/sifts/template/template.jpg",
  "interfaces": {
    "summary": {
      "controller": "dist/js/controller.umd-es2015.js"
    }
  },
  "dag": {
    "inputs":{
      "emails":{
        "ocadoOrders":{
          "filter":{
            "conditions":[{
              "from":{
                "regexp": {
                  "pattern": "customerservices@ocado\\.com",
                  "flags": "i"
                }
              }
            },{
              "date": "between now and 12 months before now"
            },{
              "subject":{
                "regexp": {
                  "pattern": "Confirmation of your order",
                  "flags": "i"
                }
              }
            }],
            "operator": "AND"
          },
          "wants": [
            "archive",
            "strippedHtmlBody"
          ]
        }
      }
    },
    "nodes":[{
      "#": "Parse",
      "implementation": {
        "javascript": "server/parse.js"
      },
      "input": {
          "bucket": "ocadoOrders"
      },
      "outputs": {
          "messages": {}
      }
    },
    {
      "#": "Summarize",
      "implementation": {
        "javascript": "server/summarize.js"
      },
      "input": {
          "bucket": "messages",
          "select": "/*/*"
      },
      "outputs": {
          "count": {}
      }
    }],
    "stores":{
      "messages" : {
        "key$schema":"string/string/string"
      }
    },
    "outputs":{
      "exports":{
        "count" : {
          "key$schema":"string"
        }
      }
    }
  }
}

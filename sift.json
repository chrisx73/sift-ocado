{
  "name": "sift-ocado",
  "display-name": "Sift Ocado",
  "description": "",
  "author": "",
  "version": "1.0.0",
  "color": "#ed154f",
  "image": "https://static.redsift.io/assets/sifts/template/template.jpg",
  "interfaces": {
    "email": {
      "thread" : {
        "controller": "frontend/controller.js"
      }
    },
    "summary": {
      "controller": "frontend/controller.js"
    }
  },
  "dag": {
    "inputs":{
      "emails":{
        "ocadoOrders":{
          "filter":{
            "conditions":[{
              "from":{
                "regexp": {
                  "pattern": "customerservices@ocado\\.com",
                  "flags": "i"
                }
              }
            },{
              "date": "between now and 12 months before now"
            },{
              "subject":{
                "regexp": {
                  "pattern": "Confirmation of your order",
                  "flags": "i"
                }
              }
            }],
            "wants": [
              "archive",
              "strippedHtmlBody"
            ],
            "operator": "AND"
          }
        }
      }
    },
    "nodes":[{
      "#": "Map",
      "implementation": {
        "javascript": "server/map.js"
      },
      "input": {
          "bucket": "ocadoOrders"
      },
      "outputs": {
          "messages": {}
      }
    },
    {
      "#": "Reduce",
      "implementation": {
        "javascript": "server/reduce.js"
      },
      "input": {
          "bucket": "messages",
          "select": "/*/*"
      },
      "outputs": {
          "count": {}
      }
    }],
    "stores":{
      "messages" : {
        "key$schema":"string/string/string"
      }
    },
    "outputs":{
      "exports":{
        "count" : {
          "key$schema":"string"
        }
      }
    }
  }
}
